-- 每行最大长度，默认 120
max_line_length = 9999

-- 忽略的符号
ignore = {
    "212/.*",
    "131/.*",
}

-- 全局变量
globals = {
    "class",
    "isclass",
    "instance",
    "instancewith",
    "isinstanceof",
    "unrequire",

    "typeof",

    "IsDebug",
    "Game",
    "CS",
    "Callback",
    "Logger",
    "Delegate",
}